<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 应用主题 -->
    <style name="Theme.MaiBot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSecondary">@color/accent</item>

        <!-- 状态栏 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- 背景色 -->
        <item name="android:windowBackground">@color/background</item>

        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- 组件样式 -->
        <item name="materialButtonStyle">@style/Widget.MaiBot.Button</item>
        <item name="textInputStyle">@style/Widget.MaiBot.TextInput</item>
        <item name="cardViewStyle">@style/Widget.MaiBot.Card</item>
    </style>

    <!-- 圆形图片样式 -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- 主按钮样式 -->
    <style name="Widget.MaiBot.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">2dp</item>
    </style>

    <!-- 次要按钮样式 -->
    <style name="Widget.MaiBot.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 文本输入框样式 -->
    <style name="Widget.MaiBot.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <!-- 卡片样式 -->
    <style name="Widget.MaiBot.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- 设置项卡片样式 -->
    <style name="Widget.MaiBot.SettingCard">
        <item name="android:background">@drawable/setting_card_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- 设置项标题样式 -->
    <style name="TextAppearance.MaiBot.SettingTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- 页面标题样式 -->
    <style name="TextAppearance.MaiBot.PageTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 消息文字样式 -->
    <style name="TextAppearance.MaiBot.Message">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- 时间戳样式 -->
    <style name="TextAppearance.MaiBot.Timestamp">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <!-- 发送者名称样式 -->
    <style name="TextAppearance.MaiBot.Sender">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
